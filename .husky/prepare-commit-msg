#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

bunx lint-staged

# Check linting exit code
if [ $? -eq 0 ]; then
  echo "------------------------------------"
  echo "Mr. Lint doesn't give any bad report yet. ğŸ˜"
  sleep 2
  # Build the web files
  echo "Now I'm gonna build the web files for you... ğŸ˜"
  sleep 1 
  echo "Building...ğŸ—ï¸"
  bun run build
  
else
  echo "Mr. Lint found some issues. Please fix them before building. ğŸ˜±"
  exit 1
fi

exec < /dev/tty && bunx cz --hook || true
